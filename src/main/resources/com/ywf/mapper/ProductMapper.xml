<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ywf.mapper.ProductMapper">
    <select id="getAllProduct" resultType="Product">
        select * from product
        <where>
            <if test="type!=null and type!=''">
                and type=#{type}
            </if>
            <if test="label!=null and label!=''">
                and label=#{label}
            </if>
        </where>
    </select>

    <select id="getTypes" resultType="java.lang.String">
        select distinct type from product
    </select>

    <select id="getLabels" resultType="java.lang.String">
        select distinct label from product
    </select>
</mapper>